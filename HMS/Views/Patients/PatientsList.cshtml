
@model DataTable;
@using System.Data;
@{
    ViewData["Title"] = "Patient List";
}
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    table th, table td {
        vertical-align: middle;
        white-space: nowrap;
    }

    .table-hover tbody tr:hover {
        background-color: #f3f7ff;
    }

    thead input {
        width: 100%;
        box-sizing: border-box;
    }
</style>

<!-- Breadcrumb and Title Section -->
<div class="container mt-4">
    <h4 class="fw-bold text-primary"><i class="bi bi-person-lines-fill me-2"></i>Patient List</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="~/Home/Index" class="text-decoration-none text-dark">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Patients/PatientsAddEdit" class="text-decoration-none text-dark">Patient Add/Edit</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">Patient List</li>
        </ol>
    </nav>
</div>

<!-- Buttons -->
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center flex-wrap">
        <div class="d-flex gap-2 mb-2">
            <!-- Export Dropdown -->
           

            <a href="/Patients/PatientsAddEdit" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Patient
            </a>
            <a asp-action="ExportToExcelPatients" asp-controller="Patients" class="btn btn-primary shadow-sm">
                <i class="bi bi-download me-1"></i> Download Excel
            </a>
           
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Table Section -->
    <div class="table-responsive shadow-sm rounded" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-hover table-bordered align-middle table-striped" id="patientTable">
            <thead class="table-primary text-center">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Active</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th>Action</th>
                </tr>

                <tr class="bg-light">
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search ID"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Name"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search DOB"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Gender"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Email"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Phone"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Address"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search City"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search State"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Yes/No"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Created"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Modified"></th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (DataRow patient in Model.Rows)
                {
                    <tr>
                        <td class="text-center">@patient["PatientID"]</td>
                        <td>@patient["Name"]</td>
                        <td>@Convert.ToDateTime(patient["DateOfBirth"]).ToString("yyyy-MM-dd")</td>
                        <td>@patient["Gender"]</td>
                        <td>@patient["Email"]</td>
                        <td>@patient["Phone"]</td>
                        <td>@patient["Address"]</td>
                        <td>@patient["City"]</td>
                        <td>@patient["State"]</td>
                        <td class="text-center">
                            @if (Convert.ToBoolean(patient["IsActive"]))
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td>@Convert.ToDateTime(patient["Created"]).ToString("yyyy-MM-dd")</td>
                        <td>@Convert.ToDateTime(patient["Modified"]).ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("PatientsAddEdit", "Patients", new { PatientID = patient["PatientID"] })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Patients" asp-action="PatientsDelete" asp-route-ID="@patient["PatientID"]" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                <!-- Hidden Row for No Record -->
                <tr id="noRecord" style="display: none;">
                    <td colspan="13" class="text-center text-danger fw-bold">No Record Found!!</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Per-Column Search Script -->
<script>
    document.querySelectorAll(".column-search").forEach((input, colIndex) => {
        input.addEventListener("keyup", function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll("#patientTable tbody tr");
            let matchFound = false;

            rows.forEach(row => {
                if (row.id === "noRecord") return;

                let cell = row.cells[colIndex];
                if (!cell) return;

                let text = cell.innerText.toLowerCase();
                let isMatch = text.includes(filter);

                if (filter === "") {
                    row.dataset["col" + colIndex] = "true";
                } else {
                    row.dataset["col" + colIndex] = isMatch;
                }

                let visible = true;
                for (let i = 0; i < row.cells.length - 1; i++) {
                    if (row.dataset["col" + i] === "false") {
                        visible = false;
                        break;
                    }
                }

                row.style.display = visible ? "" : "none";
                if (visible) matchFound = true;
            });

            document.getElementById("noRecord").style.display = matchFound ? "none" : "";
        });
    });
</script>
