
@model DataTable
@using System.Data

@{
    ViewData["Title"] = "Doctor List";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    table th, table td {
        vertical-align: middle;
        white-space: nowrap;
    }

    .table-hover tbody tr:hover {
        background-color: #f3f7ff;
    }

    .status-badge {
        font-size: 0.75rem;
        padding: 4px 10px;
        border-radius: 10px;
        font-weight: 600;
    }

    .active-yes {
        background-color: #d4edda;
        color: #155724;
    }

    .active-no {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<!-- Breadcrumb and Title -->
<div class="container mt-4">
    <h4 class="fw-bold text-primary"><i class="bi bi-person-badge-fill me-2"></i>Doctor List</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="~/Home/Index" class="text-decoration-none text-dark">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Doctor/DoctorAddEdit" class="text-decoration-none text-dark">Doctor Add/Edit</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">Doctor List</li>
        </ol>
    </nav>
</div>

<!-- Search and Add Button -->
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center flex-wrap">


        <div class="d-flex gap-2 mb-2">
            <!-- Export Dropdown -->
           

            <a href="/Doctor/DoctorAddEdit" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Doctor
            </a>
            <a asp-action="ExportToExcelDoctors" asp-controller="Doctor" class="btn btn-primary shadow-sm">
                <i class="bi bi-download me-1"></i> Download Excel
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Doctor Table -->
    <div class="table-responsive shadow-sm rounded" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-hover table-bordered align-middle table-striped" id="doctorTable">
            <thead class="table-primary text-center">
                <tr>
                    <th>Doctor ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Qualification</th>
                    <th>Specialization</th>
                    <th>Is Active</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th>Actions</th>
                </tr>
               
                <!-- Search row -->
            </thead>
            <tbody>
                @foreach (DataRow doc in Model.Rows)
                {
                    bool isActive = Convert.ToBoolean(doc["IsActive"]);
                    string badgeClass = isActive ? "status-badge active-yes" : "status-badge active-no";
                    string badgeText = isActive ? "Yes" : "No";

                    <tr>
                        <td class="text-center">@doc["DoctorID"]</td>
                        <td>@doc["Name"]</td>
                        <td>@doc["Phone"]</td>
                        <td>@doc["Email"]</td>
                        <td>@doc["Qualification"]</td>
                        <td>@doc["Specialization"]</td>
                        <td class="text-center">
                            <span class="@badgeClass">@badgeText</span>
                        </td>
                        <td>@Convert.ToDateTime(doc["Created"]).ToString("yyyy-MM-dd")</td>
                        <td>@Convert.ToDateTime(doc["Modified"]).ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("DoctorAddEdit", "Doctor", new { DoctorID = doc["DoctorID"] })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Doctor" asp-action="DoctorDelete" asp-route-id="@doc["DoctorID"]" class="btn btn-sm btn-danger" title="Delete Doctor" onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }

                <!-- Hidden row for "No Record Found" -->
                <tr id="noRecord" style="display:none;">
                    <td colspan="10" class="text-center text-danger fw-bold">No Record Found!!</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- JavaScript -->
<script>
    // Global search
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let input = this.value.toLowerCase();
        let rows = document.querySelectorAll("#doctorTable tbody tr");

        rows.forEach(row => {
            if (row.id === "noRecord") return;
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(input) ? "" : "none";
        });
    });

    // Per-column search
    document.querySelectorAll(".column-search").forEach((input, colIndex) => {
        input.addEventListener("keyup", function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll("#doctorTable tbody tr");
            let matchFound = false;

            rows.forEach(row => {
                if (row.id === "noRecord") return;
                let cell = row.cells[colIndex];
                if (!cell) return;

                let text = cell.innerText.toLowerCase();
                let isMatch = text.includes(filter);

                if (filter === "") {
                    row.dataset["col" + colIndex] = "true";
                } else {
                    row.dataset["col" + colIndex] = isMatch;
                }

                // Check all column results for this row
                let visible = true;
                for (let i = 0; i < row.cells.length - 1; i++) {
                    if (row.dataset["col" + i] === "false") {
                        visible = false;
                        break;
                    }
                }

                row.style.display = visible ? "" : "none";
                if (visible) matchFound = true;
            });

            document.getElementById("noRecord").style.display = matchFound ? "none" : "";
        });
    });
</script>
