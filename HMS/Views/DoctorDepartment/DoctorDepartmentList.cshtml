
@model DataTable
@using System.Data

@{
    ViewData["Title"] = "Doctor Department List";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    table th, table td {
        vertical-align: middle;
        white-space: nowrap;
    }

    .table-hover tbody tr:hover {
        background-color: #f3f7ff;
    }
</style>

<!-- Breadcrumb and Title Section -->
<div class="container mt-4">
    <h4 class="fw-bold text-primary"><i class="bi bi-diagram-3-fill me-2"></i>Doctor Department List</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="~/Home/Index" class="text-decoration-none text-dark">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/DoctorDepartment/DoctorDepartmentAddEdit" class="text-decoration-none text-dark">DoctorDepartment Add/Edit</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">Doctor Department List</li>
        </ol>
    </nav>
</div>

<!-- Search and Action Buttons -->
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center flex-wrap">
        <div class="me-3 mb-2" style="flex-grow: 1; max-width: 300px;">
            <input type="text" id="searchInput" class="form-control shadow-sm" placeholder="Search DoctorDepartment..." />
        </div>

        <!-- Action buttons -->
        <div class="d-flex gap-2 mb-2">
            <!-- Export Dropdown -->
            

            <a href="/DoctorDepartment/DoctorDepartmentAddEdit" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Mapping
            </a>
            <a asp-action="ExportToExcelDoctorDepartment" asp-controller="DoctorDepartment" class="btn btn-primary shadow-sm">
                <i class="bi bi-download me-1"></i> Download Excel
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Table Section -->
    <div class="table-responsive shadow-sm rounded" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-hover table-bordered align-middle table-striped" id="doctorDeptTable">
            <thead class="table-primary text-center">
                <tr>
                    <th>ID</th>
                    <th>Doctor Name</th>
                    <th>Department Name</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow item in Model.Rows)
                {
                    <tr>
                        <td class="text-center">@item["DoctorDepartmentID"]</td>
                        <td>@item["DoctorName"]</td>
                        <td>@item["DepartmentName"]</td>
                        <td>@Convert.ToDateTime(item["Created"]).ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("DoctorDepartmentAddEdit", "DoctorDepartment", new { DoctorDepartmentID = item["DoctorDepartmentID"] })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="DoctorDepartment" asp-action="DoctorDepartmentDelete" asp-route-ID="@item["DoctorDepartmentID"]" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- JavaScript -->
<script>
    // Search filter
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let input = this.value.toLowerCase();
        let rows = document.querySelectorAll("#doctorDeptTable tbody tr");

        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(input) ? "" : "none";
        });
    });
</script>
