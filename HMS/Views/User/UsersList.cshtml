
@model DataTable
@using System.Data

@{
    ViewData["Title"] = "User List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    table th, table td {
        vertical-align: middle;
        white-space: nowrap;
    }

    .table-hover tbody tr:hover {
        background-color: #f3f7ff;
    }

    thead input {
        width: 100%;
        box-sizing: border-box;
    }
</style>

<!-- Breadcrumb and Title -->
<div class="container mt-4">
    <h4 class="fw-bold text-primary"><i class="bi bi-people-fill me-2"></i>User List</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="~/Home/Index" class="text-decoration-none text-dark">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/User/UserAddEdit" class="text-decoration-none text-dark">User Add/Edit</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">User List</li>
        </ol>
    </nav>
</div>

<!-- Search & Add Button -->
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center flex-wrap">

        <div class="d-flex gap-2 mb-2">
           
            <a href="/User/UserAddEdit" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add User
            </a>
            <a asp-action="ExportToExcel" asp-controller="User" class="btn btn-primary shadow-sm">
                <i class="bi bi-download me-1"></i> Download Excel
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Table Section -->
    <div class="table-responsive shadow-sm rounded " style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-hover table-bordered align-middle table-striped" id="userTable">
            <thead class="table-primary text-center">
                <tr>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>Is Active</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th>Action</th>
                </tr>

                <tr class="bg-light">
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Username"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Password"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Email"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Mobile"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Yes/No"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Created"></th>
                    <th><input type="text" class="form-control form-control-sm column-search" placeholder="Search Modified"></th>
                    <th></th>
                </tr>
               
            </thead>
            <tbody>
                @foreach (DataRow dr in Model.Rows)
                {
                    <tr>
                        <td>@dr["UserName"]</td>
                        <td>@dr["Password"]</td>
                        <td>@dr["Email"]</td>
                        <td>@dr["MobileNo"]</td>
                        <td class="text-center">
                            @if (Convert.ToBoolean(dr["IsActive"]))
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td>@Convert.ToDateTime(dr["Created"]).ToString("yyyy-MM-dd")</td>
                        <td>@Convert.ToDateTime(dr["Modified"]).ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("UserAddEdit", "User", new { UserID = dr["UserID"] })" class="btn btn-sm btn-primary" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="User" asp-action="UserDelete" asp-route-ID="@dr["UserID"]" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                <!-- Hidden Row for No Record -->
                <tr id="noRecord" style="display: none;">
                    <td colspan="8" class="text-center text-danger fw-bold">No Record Found!!</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Per-Column Search Script -->
<script>
    document.querySelectorAll(".column-search").forEach((input, colIndex) => {
        input.addEventListener("keyup", function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll("#userTable tbody tr");
            let matchFound = false;

            rows.forEach(row => {
                if (row.id === "noRecord") return;

                let cell = row.cells[colIndex];
                if (!cell) return;0

                let text = cell.innerText.toLowerCase();
                let isMatch = text.includes(filter);

                if (filter === "") {
                    row.dataset["col" + colIndex] = "true";
                } else {
                    row.dataset["col" + colIndex] = isMatch;
                }

                // Check all filters for this row
                let visible = true;
                for (let i = 0; i < row.cells.length - 1; i++) {
                    if (row.dataset["col" + i] === "false") {
                        visible = false;
                        break;
                    }
                }

                row.style.display = visible ? "" : "none";
                if (visible) matchFound = true;
            });

            document.getElementById("noRecord").style.display = matchFound ? "none" : "";
        });
    });
</script>
