@model DataTable
@using System.Data

@{
    ViewData["Title"] = "Appointment List";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    table th, table td {
        vertical-align: middle;
        white-space: nowrap;
    }

    .table-hover tbody tr:hover {
        background-color: #f3f7ff;
    }

    .status-badge {
        font-size: 0.75rem;
        padding: 4px 10px;
        border-radius: 10px;
        font-weight: 600;
    }

    .status-confirmed {
        background-color: #d4edda;
        color: #155724;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-cancelled {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<!-- Breadcrumb and Title -->
<div class="container mt-4">
    <h4 class="fw-bold text-primary"><i class="bi bi-calendar2-check-fill me-2"></i>Appointment List</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="~/Home/Index" class="text-decoration-none text-dark">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Appointments/AppointmentAddEdit" class="text-decoration-none text-dark">Add/Edit Appointment</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">Appointment List</li>
        </ol>
    </nav>
</div>

<!-- Actions -->
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3 align-items-center flex-wrap">

        <div class="d-flex gap-2 mb-2">

            <!-- Export Dropdown -->
            

            <a href="/Appointments/AppointmentAddEdit" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Appointment
            </a>

            <a asp-action="ExportToExcelAppointment" asp-controller="Appointments" class="btn btn-primary shadow-sm">
                <i class="bi bi-download me-1"></i> Download Excel
            </a>
        </div>
    </div>

    <!-- Flash Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Table -->
    <div class="table-responsive shadow-sm rounded" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-hover table-bordered align-middle table-striped" id="appointmentTable" >
            <thead class="table-primary text-center">
                <tr>
                    <th>Doctor Name</th>
                    <th>Patient Name</th>
                    <th>DEpartment Name</th>
                    <th>Appointment Date</th>
                    <th>Status</th>
                    <th>Description</th>
                    <th>Consulted Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow dr in Model.Rows)
                {
                    var status = dr["AppointmentStatus"].ToString().ToLower();
                    var badgeClass = status switch
                    {
                        "confirmed" => "status-badge status-confirmed",
                        "pending" => "status-badge status-pending",
                        "cancelled" => "status-badge status-cancelled",
                        _ => "status-badge bg-secondary text-white"
                    };

                    <tr>
                        <td>@dr["PatientName"]</td>
                        <td>@dr["DoctorName"]</td>
                        <td>@dr["DepartmentName"]</td>
                        <td>@Convert.ToDateTime(dr["AppointmentDate"]).ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-center">
                            <span class="@badgeClass text-capitalize">@dr["AppointmentStatus"]</span>
                        </td>
                        <td>@dr["Description"]</td>
                        <td>₹@dr["TotalConsultedAmount"]</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("AppointmentAddEdit", "Appointments", new { AppointmentID = dr["AppointmentID"] })" class="btn btn-sm btn-primary" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Appointments" asp-action="AppointmentDelete" asp-route-AppointmentID="@dr["AppointmentID"]" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this appointment?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Optional: Search Filter (add an input field with id 'searchInput' if using this) -->
<script>
    // Optional live search
    document.getElementById("searchInput")?.addEventListener("keyup", function () {
        let input = this.value.toLowerCase();
        let rows = document.querySelectorAll("#appointmentTable tbody tr");

        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(input) ? "" : "none";
        });
    });
</script>
