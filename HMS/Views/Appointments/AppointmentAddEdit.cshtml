@model HMS.Models.AppointmentModel

<div class="container mt-4">
    <h4 class="fw-bold text-primary"><i class="bi bi-calendar-plus me-2"></i>Appointment Add/Edit</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
            <li class="breadcrumb-item"><a href="~/Home/Index" class="text-decoration-none text-dark">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Appointments/AppointmentsList" class="text-decoration-none text-dark">Appointment List</a></li>
            <li class="breadcrumb-item active text-primary" aria-current="page">Appointment Add/Edit</li>
        </ol>
    </nav>
</div>
<!-- Form Section -->
<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Enter Appointment Details</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AppointmentSave", "Appointments", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(m => m.AppointmentID)

                <div class="row g-3">
                    <div class="form-group">
                        <label>Doctor</label>
                        <select asp-for="DoctorID" class="form-control"
                                asp-items="@(new SelectList(ViewBag.DoctorList, "DoctorID", "Name"))">
                            <option value="">-- Select Doctor --</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Patient</label>
                        <select asp-for="PatientID" class="form-control"
                                asp-items="@(new SelectList(ViewBag.PatientList, "PatientID", "Name"))">
                            <option value="">-- Select Patient --</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="AppointmentDate" class="form-label fw-semibold"></label>
                        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>


                    <div class="col-md-6">
                        <label asp-for="AppointmentStatus" class="form-label fw-semibold"></label>
                        <select asp-for="AppointmentStatus" class="form-select">
                            <option value="">-- Select Status --</option>
                            <option>Pending</option>
                            <option>Completed</option>
                            <option>Cancelled</option>
                        </select>
                        <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Description, "Description", new { @class = "form-label fw-semibold" })
                        @Html.TextAreaFor(m => m.Description, 3, 0, new { @class = "form-control", placeholder = "Write a short description..." })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.SpecialRemarks, "Special Remarks", new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.SpecialRemarks, new { @class = "form-control", placeholder = "Any special notes..." })
                        @Html.ValidationMessageFor(m => m.SpecialRemarks, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.TotalConsultedAmount, "Total Consulted Amount", new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.TotalConsultedAmount, new { @class = "form-control", type = "number", step = "0.01", placeholder = "₹ 0.00" })
                        @Html.ValidationMessageFor(m => m.TotalConsultedAmount, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                    <label asp-for="UserID"></label>
                    <select asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))" class="form-control">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save2 me-1"></i> Save Appointment
                    </button>
                    @Html.ActionLink("Cancel", "AppointmentsList", "Appointments", null, new { @class = "btn btn-secondary ms-2 px-4" })
                </div>
            }
        </div>
    </div>
</div>

